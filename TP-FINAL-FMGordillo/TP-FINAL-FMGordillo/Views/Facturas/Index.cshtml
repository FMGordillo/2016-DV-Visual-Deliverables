@model IEnumerable<TP_FINAL_FMGordillo.Models.Factura>

@{
    ViewBag.Title = "Facturas";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Crear nueva factura", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idfactura)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.fecha)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idfactura)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idfactura }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.idfactura })
        </td>
    </tr>
}

</table>
